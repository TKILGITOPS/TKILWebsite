<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TKIL Industries</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- FIXED HEADER: White BG + Black Text -->
    <header class="main-header">
        <div class="header-container">
            <a href="/" class="logo">TKIL Industries</a>

            <nav class="main-nav">
                <a href="#home" class="nav-link">Home</a>
                <a href="#business" class="nav-link">Business</a>
                <a href="#services" class="nav-link">Services</a>
                <a href="#projects" class="nav-link">Projects</a>
                <a href="#about" class="nav-link">About</a>
                <a href="#contact" class="nav-link">Contact</a>

                <!-- Hamburger Menu -->
                <div class="menu-toggle">
                    <span class="menu-line"></span>
                    <span class="menu-line"></span>
                    <span class="menu-line"></span>

                    <div class="menu-dropdown">
                        <ul>
                            <li><a href="#option1">Company</a></li>
                            <li><a href="#option2">Divisions</a></li>
                            <li><a href="#option3">Products</a></li>
                            <li><a href="#option4">Design</a></li>
                            <li><a href="#option5">Manufacturing</a></li>
                            <li><a href="#option6">Erection &amp; Commissioning</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <!-- Footer -->
    <footer class="main-footer">
        <div class="footer-container">
            <div class="footer-content">
                <!-- Company Column -->
                <div class="footer-column">
                    <h3>Company</h3>
                    <ul>
                        <li><a href="#divisions">Divisions</a></li>
                        <li><a href="#products">Products</a></li>
                        <li><a href="#design">Design</a></li>
                        <li><a href="#manufacturing">Manufacturing</a></li>
                        <li><a href="#erection">Erection & Commissioning</a></li>
                        <li><a href="#service">Service</a></li>
                    </ul>
                </div>

                <!-- Quick Links Column -->
                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="#home">Home</a></li>
                        <li><a href="#news">News & Downloads</a></li>
                        <li><a href="#enquiry">Enquiry</a></li>
                        <li><a href="#career">Career</a></li>
                        <li><a href="#sitemap">Sitemap</a></li>
                        <li><a href="#feedback">Customer Feedback Survey</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>

                <!-- Company Info Column -->
                <div class="footer-column footer-company-info">
                    <h3>Contact Us</h3>
                    <p class="footer-company-name">TKIL Industries Pvt. Ltd.</p>
                    <p>(Formerly known as thyssenkrupp Industries India Pvt. Ltd.)</p>
                    <p>Leading EPC for power, industrial, and infrastructure projects worldwide</p>

                    <div class="footer-social">
                        <a href="https://www.linkedin.com" target="_blank" aria-label="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="https://www.instagram.com" target="_blank" aria-label="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://www.facebook.com" target="_blank" aria-label="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://www.twitter.com" target="_blank" aria-label="Twitter">
                            <i class="fab fa-x-twitter"></i>
                        </a>
                        <a href="https://www.youtube.com" target="_blank" aria-label="YouTube">
                            <i class="fab fa-youtube"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2026 TKIL Industries Pvt. Ltd. All rights reserved.</p>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
